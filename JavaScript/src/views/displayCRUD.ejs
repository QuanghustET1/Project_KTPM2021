<!DOCTYPE html>
<html>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    .btn-edit {
        background-color: chartreuse;
    }

    .btn-delete {
        background-color: red;
    }
</style>

<body>

    <h2>A basic HTML table</h2>

    <table style="width:100%">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <tr>
            <% for(var i=0; i < dataTable.length; i++) { %>
        <tr>
            <td>
                <%= dataTable[i].firstName %>
            </td>
            <td>
                <%= dataTable[i].lastName %>
            </td>
            <td>
                <%= dataTable[i].email %>
            </td>
            <td>
                <%= dataTable[i].address %>
            </td>
            <td>
                <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button"> Edit </a>
                <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button"> Delete </a>
            </td>
        </tr>
        <% } %>
            </tr>
    </table>

</body>

</html>